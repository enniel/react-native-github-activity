{
  "name": "react-native-github-activity",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "info": "react-native info",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "reset-cache": "npm start -- --reset-cache",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "install-deps": "npm i --legacy-peer-deps --no-optional",
    "clean:bundler": "sh scripts/clean-bundler.sh",
    "clean:node": "node scripts/clean-node.js",
    "clean:ios": "node scripts/clean-ios.js",
    "clean:android": "node scripts/clean-android.js",
    "clean": "sh scripts/clean.sh",
    "fresh": "npm run clean && npm run install-deps && npm run make",
    "android:release": "npm run android -- --variant=release",
    "pod:install": "cd ios && pod install",
    "pod:update": "cd ios && pod update",
    "make": "cd ios && sh ./make",
    "keystore:release": "node scripts/android/keystoreRelease.js",
    "keystore:list": "node scripts/android/keystoreList.js",
    "gradlew:clean": "./android/gradlew clean -p ./android",
    "gradlew:stop": "./android/gradlew --stop -p ./android",
    "prebuild:android": "sh scripts/prebuild-android.sh",
    "build:android:bundle": "sh scripts/build-android-bundle.sh",
    "build:android:debug:test:apk": "sh scripts/build-android-test-debug-apk.sh",
    "build:android:debug:apk": "sh scripts/build-android-debug-apk.sh",
    "build:android:release:apk": "sh scripts/build-android-release-apk.sh",
    "build:android:release:test:apk": "sh scripts/build-android-test-release-apk.sh",
    "build:android:js": "sh scripts/build-android-js.sh",
    "build:ios:js": "sh scripts/build-ios-js.sh",
    "build:ios:debug": "xcodebuild -workspace ios/ReactNativeGithubActivity.xcworkspace -scheme ReactNativeGithubActivity -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
    "build:ios:release": "xcodebuild -workspace ios/ReactNativeGithubActivity.xcworkspace -scheme ReactNativeGithubActivity -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
    "build:ios:clean": "rm -rf ios/build && rm -rf ~/Library/Developer/Xcode/DerivedData/*",
    "android:optimize-images": "node scripts/optimize-images.js"
  },
  "dependencies": {
    "@react-navigation/native": "6.0.0",
    "@react-navigation/native-stack": "6.0.0",
    "@react-navigation/stack": "6.0.0",
    "@reduxjs/toolkit": "1.6.1",
    "react": "17.0.2",
    "react-native": "0.64.2",
    "react-native-gesture-handler": "1.10.3",
    "react-native-indicators": "0.17.0",
    "react-native-safe-area-context": "3.2.0",
    "react-native-safe-area-view": "1.1.1",
    "react-native-screens": "3.4.0",
    "react-native-splash-screen": "3.2.0",
    "react-native-svg": "12.1.1",
    "react-redux": "7.2.4"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-transform-react-jsx": "7.14.9",
    "@babel/runtime": "7.14.8",
    "@expo/node-keytool": "0.0.4",
    "@react-native-community/eslint-config": "3.0.0",
    "@types/jest": "26.0.24",
    "@types/react-native": "0.64.12",
    "@types/react-native-indicators": "0.16.1",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "babel-jest": "27.0.6",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "eslint": "7.32.0",
    "jest": "27.0.6",
    "jest-circus": "27.0.6",
    "metro-minify-terser": "0.66.2",
    "metro-react-native-babel-preset": "0.66.2",
    "node-zopflipng": "1.0.0",
    "prettier": "2.3.2",
    "react-test-renderer": "17.0.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
